@*listar animales con divs*@
<div class="animal-list">
    @for (int i = 0; i < Model.Count; i++)
    {
        var animal = Model[i];
        <div class="animal-card">
            <h3>@animal.GetType().Name: @animal.Nombre</h3>
            <p><strong>Patas:</strong> @animal.ObtenerCantidadDePatas()</p>
            <p><strong>Sonido:</strong> @animal.HacerSonido()</p>
            <form asp-action="Eliminar" method="post" style="display:inline;">
                <input type="hidden" name="indice" value="@i" />
                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
            </form>
        </div>
    }
</div>




